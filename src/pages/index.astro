---
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.astro';
import Projects from '../components/Projects.tsx';
import Writing from '../components/Writing.tsx';
import '../styles/global.css';
import { texts } from '../i18n';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="https://ext.same-assets.com/2672838412/3697472433.png" />
    <meta name="viewport" content="width=device-width" />
    <title>Wiktor Lazar | Portfolio</title>
    <meta name="description" content="Wiktor Lazar - AI-inspired projects and portfolio" />
    
  </head>

<body class="bg-white text-tm-gray flex flex-col min-h-screen">
  <Header client:load /> <!-- React component -->

  <!-- Hero + krótki opis -->

  <main class="flex-1 flex flex-col justify-center items-center px-6 py-20">
  
  <!-- Sekcja Today -->
  <div data-section="Today">
    <div class="w-full max-w-[660px]">
<h1
  id="hero-title"
  class="text-4xl md:text-5xl lg:text-6xl font-azeret font-light tracking-widest mb-20 text-center overflow-hidden cursor-pointer gradient-text"
>
  WIKTOR ŁAZAR
</h1>

<script type="module">
  const title = document.getElementById('hero-title');

  title.addEventListener('mousemove', (e) => {
    const rect = title.getBoundingClientRect();
    const x = e.clientX - rect.left;
    const y = e.clientY - rect.top;
    const centerX = rect.width / 2;
    const centerY = rect.height / 2;

    const rotateX = ((y - centerY) / centerY) * 10;
    const rotateY = ((x - centerX) / centerX) * 10;

    title.style.transform = `perspective(500px) rotateX(${-rotateX}deg) rotateY(${rotateY}deg)`;
  });

  title.addEventListener('mouseleave', () => {
    title.style.transform = 'perspective(500px) rotateX(0deg) rotateY(0deg)';
  });
</script>
     <h2 class="text-xl font-satoshi font-semibold mb-4 text-left text-tm-gray px-4">
  Today
</h2>

  <p class="font-satoshi text-[17px] text-left px-4 space-y-3">
  I’ve been programming for 5 years, creating digital projects that are simple, fast, and intuitive.  
  My experience spans building projects that are both user-friendly and technically efficient, delivering seamless interactions.
</p>

<p class="font-satoshi text-[17px] text-left px-4 mt-4 space-y-3">
  I enjoy designing user-centered experiences that are engaging, enjoyable, and easy to use.  
  I focus on combining clean design with efficient, scalable solutions that make technology feel seamless and modern.
</p>
    </div>
  </div>

  <!-- Sekcja Projects -->
  <div data-section="Projects" class="w-full max-w-[660px]">
    <Projects client:load />
  </div>

  <!-- Sekcja Writing 
  <div data-section="Writing" class="w-full max-w-[660px]">
    <Writing client:load />
  </div>-->

